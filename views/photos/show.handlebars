{{> header}}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <a href="/photos/{{this._id}}"><img src="{{photo.image}} " alt=""  class="img-thumbnail mt-5"></a>
            <p class="small p-1">Created on: {{photo.created}}</p>
            <form action="/photos/{{photo._id}}?_method=DELETE" method="POST">
            <button class="btn btn-danger mt-1 btn-block">Delete</button>
            </form>
        </div>

    </div>
</div>